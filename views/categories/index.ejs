<!DOCTYPE html>
<html>
<head>
  <title>Categories List</title>
</head>
<body>
  <h1>List of Categories</h1>
  <a href="/categories/add">Add New Category</a>
  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(category => { %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td>
            <a href="/categories/edit/<%= category.id %>">Edit</a> |
            <a href="/categories/delete/<%= category.id %>">Delete</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
