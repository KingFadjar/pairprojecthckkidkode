<!DOCTYPE html>
<html>
<head>
  <title>Edit Course</title>
</head>
<body>
  <h1>Edit Course</h1>
  <form action="/courses/edit/<%= course.id %>" method="POST">
    <label for="title">Course Title:</label>
    <input type="text" name="title" id="title" value="<%= course.title %>" required>
    <br>
    <label for="description">Course Description:</label>
    <input type="text" name="description" id="description" value="<%= course.description %>" required>
    <br>
    <label for="CategoryId">Category ID:</label>
    <input type="number" name="CategoryId" id="CategoryId" value="<%= course.CategoryId %>" required>
    <br>
    <button type="submit">Update Course</button>
  </form>
  <a href="/courses">Back to Courses List</a>
</body>
</html>
