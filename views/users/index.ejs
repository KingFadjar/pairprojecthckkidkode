<!DOCTYPE html>
<html>
<head>
  <title>Users List</title>
</head>
<body>
  <h1>List of Users</h1>
  <a href="/users/add">Add New User</a>
  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td>
            <a href="/users/edit/<%= user.id %>">Edit</a> |
            <a href="/users/delete/<%= user.id %>">Delete</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
